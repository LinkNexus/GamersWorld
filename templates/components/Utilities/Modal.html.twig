{% props id, title, multiple_steps = false %}

{% set id = id ~ "-modal" %}

<div
        {{ multiple_steps ? 'data-controller="multiple-steps-modal"' : "" }}
        id="{{ id }}"
        tabindex="-1"
        aria-hidden="true"
        class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
        data-modal-backdrop="static"
        style="background: rgba(0, 0, 0, 0.8)"
>
    <div class="relative p-4 w-full max-w-xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-black border border-theme-primary rounded-lg shadow-lg">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                {% if multiple_steps %}
                    <button
                            type="button"
                            class="start-2.5 text-theme-primary bg-transparent hover:bg-theme-primary hover:text-white rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                            data-multiple-steps-modal-target="previousButton"
                    >
                        <twig:ux:icon class="w-6 h-6" aria-hidden="true" name="solar:arrow-left-linear" />
                        <span class="sr-only">Previous Step</span>
                    </button>
                {% endif %}
                <h3 class="title text-4xl">
                    {{ title }}
                </h3>
                <button type="button" class="end-2.5 text-theme-primary bg-transparent hover:bg-theme-primary hover:text-white rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="{{ id }}">
                    <twig:ux:icon class="w-6 h-6" aria-hidden="true" name="bitcoin-icons:cross-filled" />
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 md:p-5">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
</div>
{% props type, message, id %}

<div id="{{ id }}" class="flex items-center p-4 mb-4 rounded-lg alert-{{ type }}" role="alert">
    <twig:ux:icon name="ep:info-filled" class="flex-shrink-0 w-4 h-4" aria-hidden="true" fill="currentColor" />
    <span class="sr-only">Info</span>
    <div class="ms-3 text-sm font-medium">
        {{ message }}
    </div>
    <button type="button" class="ms-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 p-1.5 inline-flex items-center justify-center h-8 w-8" data-dismiss-target="#{{ id }}" aria-label="Close">
        <span class="sr-only">Close</span>
        <twig:ux:icon class="w-6 h-6" aria-hidden="true" name="bitcoin-icons:cross-filled" fill="none" />
    </button>
</div>
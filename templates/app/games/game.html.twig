{% extends 'app/base.html.twig' %}

{% block content %}
    <div class="flex flex-col md:flex-row items-center md:gap-x-6 gap-y-6 md:gap-y-0">
        <img class="md:w-1/2 w-full rounded-lg" src="{{ asset('images/' ~ game.image) }}" alt="{{ game.name }} image" />
        <div class="flex flex-col gap-y-3">
            <h1 class="title">
                <span>{{ game.name }}</span>
            </h1>
            <p class="text-normal text-center">{{ game.description }}</p>
            <custom-action id="test-1" actions="create-game-modal:show">
                <button class="button-primary mt-5">Play</button>
            </custom-action>
        </div>
    </div>

    <multi-modal id="create-game-modal" title="Create a new Game Session" static is-closeable>
        <twig:CreateGameForm :form="gameForm" data-targeted-as="create-game-modal:dynamic-form" />
    </multi-modal>

    <random-input>
        <input type="text" />
    </random-input>
{% endblock %}
